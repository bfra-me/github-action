{
  "name": "github-action",
  "packageManager": "yarn@3.6.3",
  "version": "0.0.0-development",
  "private": true,
  "description": "GitHub Action template repository for bfra.me.",
  "main": "dist/index.js",
  "scripts": {
    "build": "ncc build --license licenses.txt -o dist src/main.ts",
    "format": "prettier --write .",
    "check-format": "prettier --check .",
    "lint": "eslint . --report-unused-disable-directives --max-warnings 0",
    "test": "jest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bfra-me/github-action.git"
  },
  "keywords": [
    "github-actions",
    "nodejs",
    "typescript"
  ],
  "author": "Marcus R. Brown <contact@marcusrbrown.com>",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "1.10.1"
  },
  "devDependencies": {
    "@semantic-release/git": "10.0.1",
    "@types/jest": "29.5.5",
    "@types/node": "18.17.18",
    "@typescript-eslint/eslint-plugin": "6.7.2",
    "@typescript-eslint/parser": "6.7.2",
    "@vercel/ncc": "0.38.0",
    "conventional-changelog-conventionalcommits": "7.0.2",
    "eslint": "8.49.0",
    "eslint-plugin-jest": "27.4.0",
    "jest": "29.7.0",
    "js-yaml": "4.1.0",
    "prettier": "3.0.3",
    "semantic-release": "22.0.1",
    "ts-jest": "29.1.1",
    "typescript": "5.2.2"
  }
}
