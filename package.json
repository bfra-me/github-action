{
  "name": "github-action",
  "packageManager": "yarn@3.6.3",
  "version": "1.0.3",
  "private": true,
  "description": "GitHub Action template repository for bfra.me.",
  "main": "dist/index.js",
  "scripts": {
    "build": "ncc build --license licenses.txt -o dist src/main.ts",
    "format": "prettier --write .",
    "check-format": "prettier --check .",
    "lint": "eslint . --report-unused-disable-directives --max-warnings 0",
    "test": "jest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bfra-me/github-action.git"
  },
  "keywords": [
    "github-actions",
    "nodejs",
    "typescript"
  ],
  "author": "Marcus R. Brown <contact@marcusrbrown.com>",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "1.10.0"
  },
  "devDependencies": {
    "@semantic-release/git": "10.0.1",
    "@types/jest": "29.5.4",
    "@types/node": "18.17.14",
    "@typescript-eslint/eslint-plugin": "6.6.0",
    "@typescript-eslint/parser": "6.6.0",
    "@vercel/ncc": "0.36.1",
    "conventional-changelog-conventionalcommits": "7.0.1",
    "eslint": "8.49.0",
    "eslint-plugin-jest": "27.2.3",
    "jest": "29.6.4",
    "js-yaml": "4.1.0",
    "prettier": "3.0.3",
    "semantic-release": "21.1.1",
    "ts-jest": "29.1.1",
    "typescript": "5.2.2"
  }
}
