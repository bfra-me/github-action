    "@typescript-eslint/eslint-plugin": "^5.46.0",
    "@typescript-eslint/parser": "^5.46.0",
    "@vercel/ncc": "^0.36.0",
    "eslint": "^8.0.0",
    "eslint-plugin-jest": "^27.0.0",
    "jest": "^29.0.0",
    "js-yaml": "^4.1.0",
    "prettier": "2.8.4",
    "ts-jest": "^29.0.0",
    "typescript": "^4.4.4"
