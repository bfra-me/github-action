{
  "name": "github-action",
  "packageManager": "yarn@3.6.1",
  "version": "0.0.0-development",
  "private": true,
  "description": "GitHub Action template repository for bfra.me.",
  "main": "dist/index.js",
  "scripts": {
    "build": "ncc build --license licenses.txt -o dist src/main.ts",
    "format": "prettier --write .",
    "check-format": "prettier --check .",
    "lint": "eslint . --report-unused-disable-directives --max-warnings 0",
    "test": "jest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bfra-me/github-action.git"
  },
  "keywords": [
    "github-actions",
    "nodejs",
    "typescript"
  ],
  "author": "Marcus R. Brown <contact@marcusrbrown.com>",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "1.10.0"
  },
  "devDependencies": {
    "@types/jest": "29.5.3",
    "@types/node": "18.17.3",
    "@typescript-eslint/eslint-plugin": "6.3.0",
    "@typescript-eslint/parser": "6.3.0",
    "@vercel/ncc": "0.36.1",
    "eslint": "8.46.0",
    "eslint-plugin-jest": "27.2.3",
    "jest": "29.6.2",
    "js-yaml": "4.1.0",
    "prettier": "3.0.1",
    "ts-jest": "29.1.1",
    "typescript": "5.1.6"
  }
}
